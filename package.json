{
  "name": "node-auth-tdd",
  "author": "Elaine Manoelle",
  "description": "Desenvolvimento de uma API de autenticação JWT em NodeJS utilizando a técnica de TDD com as libs Jest, Factory Girl, Faker, Supertest, Sequelize, jsonwebtoken e Bcrypt",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node src/server.ts",
    "dev": "nodemon src/server.js --ignore __tests__",
    "pretest": "set NODE_ENV=test&&sequelize db:migrate",
    "test": "set NODE_ENV=test&&jest --watchAll",
    "posttest": "set NODE_ENV=test&&sequelize db:migrate:undo:all"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "factory-girl": "^5.0.4",
    "faker": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.3.3",
    "sequelize": "^6.3.5",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "sequelize-cli": "^6.2.0",
    "sqlite3": "^5.0.0"
  }
}
